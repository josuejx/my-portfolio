---
interface Props {
  text: string;
  icon: string;
  color: string;
  link: string;
}

const { link, text, icon, color } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class=`flex flex-row w-min text-base p-2 rounded-lg text-${color}-600 dark:text-${color}-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600`
>
  {text}
  <svg
    class="pl-1 w-6 h-6"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    fill="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      fill-rule="evenodd"
      d={icon}
      clip-rule="evenodd"></path>
  </svg>
</a>
